  "bugs": {
    "url": "https://github.com/mhaatha/money-tracker/issues"
  },
  "homepage": "https://github.com/mhaatha/money-tracker#readme",
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "@types/express": "^4.17.21",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "supertest": "^7.0.0",
